{
    "version": 2,
    "builds": [
        {
            "src": "skillup24/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11",
                "excludeFiles": [
                    "**/node_modules/**",
                    "**/*.pyc",
                    "**/__pycache__/**",
                    "tests/**",
                    "*.md",
                    "*.txt",
                    "db.sqlite3",
                    "debug.log"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "skillup24/wsgi.py"
        }
    ]
}
