{
    "version": 2,
    "builds": [
        {
            "src": "skillup24/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11",
                "includeFiles": ["staticfiles/**", "templates/**"],
                "excludeFiles": ["**/node_modules/**", "**/*.pyc", "**/__pycache__/**", "tests/**", "*.md", "*.txt"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "skillup24/wsgi.py"
        }
    ]
}
